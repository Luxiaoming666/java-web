<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>siyl.cit.servlet.HelloServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>siyl.cit.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>NumberServlet</servlet-name>
    <servlet-class>siyl.cit.servlet.NumberServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NumberServlet</servlet-name>
    <url-pattern>/number</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RegServlet</servlet-name>
    <servlet-class>siyl.cit.servlet.RegServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegServlet</servlet-name>
    <url-pattern>/reg</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ScopeServlet</servlet-name>
    <servlet-class>siyl.cit.servlet.ScopeServlet</servlet-class>
    <init-param>
      <param-name>username</param-name>
      <param-value>zhangsan</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ScopeServlet</servlet-name>
    <url-pattern>/scope</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CharServlet</servlet-name>
    <servlet-class>siyl.cit.servlet.CharServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CharServlet</servlet-name>
    <url-pattern>/charTest</url-pattern>
  </servlet-mapping>
</web-app>